@model TingleVendas.Models.Municipio

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Município</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdMunicipio" />
            <div class="form-group">
                <label asp-for="Municipio1" class="control-label">Município</label>
                <input asp-for="Municipio1" class="form-control" readonly />
                <span asp-validation-for="Municipio1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uf" class="control-label">UF</label>
                <select asp-for="Uf" class="form-control" asp-items="ViewBag.Uf" readonly></select>
                <span asp-validation-for="Uf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ativo" class="control-label">Ativo (0-Inativo / 1-Ativo)</label>
                <input asp-for="Ativo" min="0" max="1" class="form-control" />
                <span asp-validation-for="Ativo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
