@model TingleVendas.Models.Supervisor

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Supervisor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" data-mask="000.000.000-00" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCoordenador" class="control-label">Coordenador</label>
                <select asp-for="IdCoordenador" class="form-control" asp-items="ViewBag.IdCoordenador"></select>
            </div>
            <div class="form-group">
                <label asp-for="Interno" class="control-label">Supervisor interno?</label>
                <input type="checkbox" id="Interno" name="Interno" value="true" @((Model == null ? false : true) ? "checked=\"checked\"" : "") />
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
