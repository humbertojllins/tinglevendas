@model TingleVendas.Models.Oi360Transferencia

@{
    ViewData["Title"] = "Cancelar transferência";
}

<h1>Cancelar transferência</h1>

<h3>Deseja realmente cancelar essa transferência?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Número do pedido
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroPedidoNavigation.NumeroDoPedido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            Observação
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observacao)
        </dd>
        <dt class="col-sm-2">
            Transferido por
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioNome)
        </dd>
        <dt class="col-sm-2">
            Transferido em
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataMovimento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movimento)
        </dd>
    </dl>
    
    <form asp-action="Delete" asp-route-pano="@ViewData["ano"]" asp-route-pmes="@ViewData["mes"]">
        <input type="hidden" asp-for="NumeroPedido" />
        <input type="submit" value="Cancelar transferência" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-pAno="@ViewData["ano"]" asp-route-pMes="@ViewData["mes"]">Voltar</a>
    </form>
</div>
